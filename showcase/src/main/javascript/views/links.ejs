<div class="container-fluid">
  <div class="row-fluid text-center" >
  	<div class="alert alert-error" style="display:none" <%=plugin("alert",{})%>>
	  <strong>Error!</strong><div id="create-error"></div>
	</div>
  </div>
  <div class="row-fluid">
  	<div class="span2">
       <form >
       	<legend>Add Link</legend>
      <div class="control-group">
        <label class="control-label" for="LinkName">Name</label>
        <div class="controls">
          <input id="LinkName" type="text" class="input-medium" placeholder="Name">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="Link">Link</label>
        <div class="controls">
          <textarea  id="Link" rows="4" class="input-medium" placeholder="URL"/>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="LinkDescription">Description</label>
        <div class="controls">
          <textarea  id="LinkDescription" rows="4" class="input-medium" placeholder="Description"/>
        </div>
      </div>
  </form>
  	<button id="create-link" class="btn btn-primary">Create</button>
  	
  </div>
    <div class="span10">
      <table class="table">
			<caption>Tags</caption>
		              <thead>
		                <tr>
		                  <th>Link</th>
		                  <th>Description</th>
		                  <th>&nbsp;</th>
		                </tr>
		              </thead>
		              <tbody>
			<%
			steal.dev.log("Rendering")
			for(i=0;i<this.length;++i){%>
				<tr>
					<td><a href="<%=this[i].link%>" target="_blank"><%=this[i].name%></a></td> 
          <td><%=this[i].description%></td>
					<td><button class="close">&times;</button></td>
				</tr>
			<%}%>
		 </tbody>
		</table>
    </div>
</div>
</div>

   


